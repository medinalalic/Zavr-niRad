

@model ZavršniRad.Areas.ModulAdministrator.Models.StomatologIzmijeniVM
@{
    ViewBag.Title = "Izmijeni";
    Layout = null;
}



@using (Ajax.BeginForm("Snimi", "Stomatolog", new AjaxOptions() { UpdateTargetId = "stomatolog" }))
{
    @Html.HiddenFor(model => model.Id);

    <div class="row" style="margin-left:1px">
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" });

        }

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Dodaj stomatologa
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <form role="form">
                                <div class="form-group">
                                    <label>Ime</label>
                                    @Html.TextBoxFor(model => model.Ime, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Ime)
                                </div>

                                <div class="form-group">
                                    <label>Prezime</label>
                                    @Html.TextBoxFor(model => model.Prezime, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Prezime)
                                </div>

                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                                <div class="form-group">
                                    <label>Mobitel</label>
                                    @Html.TextBoxFor(model => model.Mobitel, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Mobitel)
                                </div>
                                <div class="form-group">
                                    <label>Adresa</label>
                                    @Html.TextBoxFor(model => model.Adresa, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Adresa)
                                </div>
                                <div class="form-group">
                                    <label>Titula</label>
                                    @Html.TextBoxFor(model => model.Titula, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Titula)
                                </div>
                                <div class="form-group">
                                    <label>JMBG</label>
                                    @Html.TextBoxFor(model => model.JMBG, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.JMBG)
                                </div>
                                <div class="form-group">
                                    <label>Korisničko ime</label>
                                    @Html.TextBoxFor(model => model.KorisnickoIme, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.KorisnickoIme)
                                </div>
                                <div class="form-group">
                                    <label>Lozinka</label>
                                    @Html.TextBoxFor(model => model.Lozinka, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Lozinka)
                                </div>
                                <button type="submit" class="btn btn-info">Snimi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- /.col-lg-6 (nested) -->
}
