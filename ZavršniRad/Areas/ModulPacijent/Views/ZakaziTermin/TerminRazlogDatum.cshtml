
@model ZavršniRad.Areas.ModulPacijent.Models.SlobodniVM
@{
    ViewBag.Title = "TerminRazlogDatum";
    Layout = null;
}


<!-- /.row -->
<div class="row" style="margin-top:17px;margin-left:10px">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Lista slobodnih satnica
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Satnica</th>
                                <th>Zakaži termin</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.satnice.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <div class="nemarezultatapretrage">
                                            Nema slobodnih satnica za taj datum

                                        </div>
                                    </td>
                                </tr>
                            }
                            else
                            {

                                foreach (var x in Model.satnice)
                                {
                                    <tr>

                                        <td>@x.Substring(0, 5)</td>
                                       
                                        <td>
                                         @Html.ActionLink("Odaberi satnicu", "Snimi", "ZakaziTermin", new {datum=Model.Datum,razlog=Model.Razlog,vrijeme=x }, new { @class = "btn btn-info" })

                                        </td>

                                     
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
              

                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->



</div>

