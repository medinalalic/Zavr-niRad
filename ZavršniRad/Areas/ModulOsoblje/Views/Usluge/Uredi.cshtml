@using ZavršniRad.Areas.ModulOsoblje.Models;
@model ZavršniRad.Areas.ModulOsoblje.Models.UslugeUrediVM
@{
    ViewBag.Title = "Uredi";
    Layout = null;
}




@using (Ajax.BeginForm("Snimi", "Usluge", new { }, new AjaxOptions() { UpdateTargetId = "usluga" }))
{
    @Html.HiddenFor(model => model.Id);
    <div class="row">
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" });

        }

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Uredi uslugu
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <form role="form">
                                <div class="form-group">
                                    <label>@Html.DisplayNameFor(m => m.Vrsta)</label>
                                    @Html.TextBoxFor(m => m.Vrsta, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Vrsta, string.Empty, new { @class = "text-danger" })


                                    @*<p class="help-block">Example block-level help text here.</p>*@
                                </div>
                                <div class="form-group">

                                    <img id="blah" style="width:100px;height:100px;" alt="UslugeImg" src='@Url.Action("Show", "Usluge", new { id = Model.Id })' />
                                </div>


                                <button type="submit" class="btn btn-info">Snimi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- /.col-lg-6 (nested) -->
}

