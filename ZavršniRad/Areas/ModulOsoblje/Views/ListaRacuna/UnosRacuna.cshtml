@using (Html.BeginForm("Snimi", "ListaRacuna"))
{
    @Html.HiddenFor(model => model.Id);

    <div class="row" style="margin-left:11px">
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" });

        }

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Dodaj račun
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <form role="form">
                                <div class="form-group">
                                    <label>Uplaćen</label>
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(model => model.Uplaćeno)
                                        </label>
                                    </div>   </div>
                                <div class="form-group">
                                    <label>Cijena</label>
                                    @Html.TextBoxFor(model => model.Cijena, new { @class = "form-control", @disabled = "@disabled" })
                                    @Html.ValidationMessageFor(model => model.Cijena)
                                </div>
                                <div class="form-group">
                                    <label>Datum</label>
                                    @Html.TextBoxFor(model => model.Datum, "{0:dd-MM-yyyy}", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Datum)
                                </div>



                                <button type="submit" class="btn btn-info">Snimi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- /.col-lg-6 (nested) -->
}