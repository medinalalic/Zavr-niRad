@using ZavršniRad.Areas.ModulOsoblje.Models
@model ZavršniRad.Areas.ModulOsoblje.Models.RacunPrikaz
@{
    ViewBag.Title = "PregledajRacune";
    Layout = null;
}
<!-- /.row -->
<div class="row" style="margin:15px 15px;">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Uvid u uneseni račun
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Cijena</th>
                                <th>Datum</th>
                                <th>Uplaćen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (RacunPrikaz.RacunInfo x in Model.racun)
            {
                                <tr>


                                    <td> @x.Cijena KM</td>

                                    <td>@x.Datum.ToShortDateString()</td>
                                    <td>@x.Uplaćeno</td>




                                </tr>

                            }
                        </tbody>
                    </table>

                </div>


                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->



</div>
