@using ZavršniRad.Areas.ModulStomatolog.Models
@model AktivniTerminiVM
@{
    ViewBag.Title = "Rezervacije";
    Layout = "~/Areas/ModulOsoblje/Views/Shared/_OsobljeLayout.cshtml";
}

<br />
<br />

<div style="margin-left:10px">
    <h5>Termini za sedmicu: <b> @Model.Pocetak.Date.ToString("dd-MM-yyyy") / @Model.Kraj.Date.ToString("dd-MM-yyyy")</b></h5>

</div>
<div style="margin-left:350px;display:inline">
    @Html.ActionLink("<", "BackRezervacije", "Termin", new { area = "ModulOsoblje" }, new { @class = "btn btn-info" })
    @Html.ActionLink("Trenutna sedmica", "Rezervacije", "Termin", new { area = "ModulOsoblje" }, new { @class = "btn btn-info" })


    @Html.ActionLink(">", "NextRezervacije", "Termin", new { area = "ModulOsoblje" }, new { @class = "btn btn-info" })

</div>
<br />
<br />
    <div class="container">
        <div class="row">
            <div class="col col-md-2">
                @if (Model._Ponedjeljak == null)
            {
                    <p>
                        Nema termina
                    </p>
                }
                else
                {
                    <table class="table table-striped">
                      
                        <thead>
                            <tr>
                                <th>Ponedjeljak <br /> @Model.Pon
                                </th>

                            </tr>
                        
                        </thead>
                        <tbody>
                           @foreach (AktivniTerminiVM.Ponedjeljak item in Model._Ponedjeljak)
                           {

                                    <tr>
                                        <td>
                                       @item.Vrijeme.ToString("HH:mm") h <br /> @item.Pacijent <br /> @item.Napomena <br />
                                            @if (item.Odobren == true)
                                            {

                                                <span style="color:royalblue;font-size:15px">Odobren</span>
                                            }
                                            else if (item.Odobren == false)
                                            {

                                                <a href='@Url.Action("Metoda",new { @id = @item.Id})'><span style="color:royalblue;font-size:15px">Neodobren</span> </a>

                                            }
                                            else
                                            {
                                                @Html.Raw("")

                                            }
                                            <br />
                                          </td>
                                    </tr>
                                

                            }
                        </tbody>
                    </table>
                }

            </div>


