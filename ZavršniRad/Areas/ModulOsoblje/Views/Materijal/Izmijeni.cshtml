
@model ZavršniRad.Areas.ModulOsoblje.Models.MaterijalzmijeniVM
@{
    ViewBag.Title = "Izmijeni";
    Layout = null;
}




@using (Html.BeginForm("Snimi", "Materijal"))
{
    @Html.HiddenFor(model => model.Id)
    <div class="row" style="margin-left:4px">
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" });

        }

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Uredi materijal
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <form role="form">
                                <div class="form-group">
                                    <label>Materijal</label>
                                    @Html.DropDownListFor(model => model.MaterijalId, Model.materijal, new { @class = "form-control" })
                                 
                                </div>
                                <div class="form-group">
                                    <label>Količina</label>
                                    @Html.TextBoxFor(model => model.Kolicina, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Kolicina)
                                </div>
                                <div class="form-group">
                                    <label>Datum</label>
                                    @Html.TextBoxFor(model => model.Datum, "{0:dd-MM-yyyy}", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Datum)
                                </div>

                                <button type="submit" class="btn btn-info">Snimi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <!-- /.col-lg-6 (nested) -->
}

